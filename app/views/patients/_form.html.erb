<%= form_with(model: @patient, local: true) do |form| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% @patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: 'Enter your name' %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age, placeholder: 'Enter your age' %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: 'Enter your email' %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, placeholder: 'Enter your address' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
